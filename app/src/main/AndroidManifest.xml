<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lzy.imagepickerdemo">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ImagePickerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".wxdemo.WxDemoActivity" />

        <activity
            android:name="cc.dagger.photopicker.ui.ImagePreviewDelActivity"
            android:theme="@style/ImagePickerThemeFullScreen" />
        <activity
            android:name="cc.dagger.photopicker.ui.ImageGridActivity"
            android:theme="@style/ImagePickerThemeFullScreen" />

        <activity
            android:name="cc.dagger.photopicker.ui.ImagePreviewActivity"
            android:theme="@style/ImagePickerThemeFullScreen" />
    </application>

</manifest>
